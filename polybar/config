[module/mpd]
type = internal/mpd
format-online = %{A:rofimpd pl mouse:}<label-song>%{A}  <icon-prev> <icon-stop> <toggle> <icon-next>

icon-prev = 
icon-stop = 
icon-play = 
icon-pause = 
icon-next = 

label-song-maxlen = 40
label-song-ellipsis = true

format-online-padding = 1


[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "CPU "
format-prefix-foreground = ${colors.scheme_bv}
label = %percentage:2%%
label-foreground = ${colors.scheme_lb}

[module/memory]
type = internal/memory
font = 4
;format = <bar-used>
interval = 2
label = %percentage_used%%
label-foreground = ${colors.scheme_lb}
format-prefix = "RAM "
format-prefix-foreground = ${colors.scheme_bv}

bar-used-indicator =
bar-used-width = 15
bar-used-foreground-0 = ${colors.scheme_vi}
;bar-used-foreground-1 = #557755
;bar-used-foreground-2 = #f5a70a
;bar-used-foreground-3 = #ff5555
bar-used-empty-foreground = #444444
bar-used-fill = ""
bar-used-empty= ""
;bar-used-fill = ""
;bar-used-empty = ""
bar-used-fill-font = 2
bar-used-empty-font = 2

[module/eth]
type = internal/network
interface = enp4s0
interval = 3.0

;
format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.scheme_bv}
label-connected = %local_ip%
label-connected-foreground = ${colors.scheme_lb}

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

[module/date]
type = internal/date
interval = 5

date = " %d/%b/%Y "
;date-alt = " %d/%m/%Y "

time = %H:%M
;time-alt = %H:%M:%S

format-prefix = "  "
format-prefix-foreground = ${colors.scheme_bv}
;format-prefix-background = #cc000000

label = %time% %date%
label-foreground = ${colors.scheme_lb}

[module/pulseaudio]
type = internal/pulseaudio
sink = alsa_output.pci-0000_00_1b.0.analog-stereo

format-volume-prefix = " "
format-volume-prefix-foreground = ${colors.scheme_bv}
format-volume = <label-volume>
label-volume =  %percentage%%
label-volume-foreground = ${colors.scheme_lb}

label-muted = muted
label-muted-foreground = #666

[module/temperature]
type = internal/temperature
thermal-zone = 2
warn-temperature = 60

format = <label>
format-warn = <label-warn>

format-prefix = " "
format-prefix-foreground = ${colors.scheme_bv}

label =  %temperature-c%
label-foreground = ${colors.scheme_lb}
label-warn = %temperature-c%
label-warn-foreground = ${colors.secondary}

[module/powermenu]
type = custom/menu

expand-right = true

format-spacing = 1

label-open = "      "
label-open-foreground = ${colors.secondary}
label-open-background = #fd000000
label-close = cancel
label-close-foreground = ${colors.secondary}
label-separator = |
label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = suspend
menu-0-0-exec = menu-open-1
menu-0-1 = reboot
menu-0-1-exec = menu-open-2
menu-0-2 = power off
menu-0-2-exec = menu-open-3

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = suspend
menu-1-1-exec = systemctl suspend

menu-2-0 = cancel
menu-2-0-exec = menu-open-0
menu-2-1 = reboot
menu-2-1-exec = systemctl reboot 

menu-3-0 = power off 
menu-3-0-exec = systemctl poweroff
menu-3-1 = cancel
menu-3-1-exec = menu-open-0

