[module/ewmh]
type = internal/xworkspaces
pin-workspaces = true

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /
mount-1 = /home

label-mounted = %{F#5543f5}%mountpoint%%{F-}%{F#43d1f5}: %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

[module/bspwm]
type = internal/bspwm

label-focused = %{T4}%{F#360d56}%{T- F-}%{T3}%{B#360d56}%{F#43d1f5}%index% %icon%%{T- B- F-}%{T4}%{B#dd000000}%{F#360d56}%{T- B- F-}
;label-focused = %{T4}%{B#70000000}%{F#bb402060}%{B- F- T-}%{B#bb401950}%{F#43d1f5}%index% %icon%%{B- F-}%{T4}%{B#70000000}%{F#bb402060}%{B- F- T-}
;label-focused = %{R}%{B#0000}%{T4}%{T-}%{B-}%{R}%{F#fff}  %index% %icon%  %{F-}%{R}%{B#0000}%{T4}%{T-}%{B-}%{R}
;label-focused-background = ${colors.background-alt}
;label-focused-background = #bb402060
;label-focused-foreground = ${colors.scheme_lb}
;label-focused-padding = 3

label-occupied= %{T4}%{F#1d0530}%{T- F-}%{T3}%{B#1d0530}%{F#43d1f5}%index% %{T- B- F-}%{T4}%{B#dd000000}%{F#1d0530}%{T- B- F-}
;label-occupied = %index%
;label-occupied-foreground = ${colors.scheme_bv}
;label-occupied-background = #aa000000
;label-occupied-padding = 3

label-urgent = %index%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 3

label-empty= %{T4}%{F#1d0530}%{T- F-}%{T3}%{B#1d0530}%{F#43d1f5} %{T- B- F-}%{T4}%{B#dd000000}%{F#1d0530}%{T- B- F-}
;label-empty =
;label-empty-foreground = ${colors.foreground-alt}
;label-empty-padding = 3

;
ws-icon-0 = I;
